{
  "name": "shopfloor-backend",
  "version": "1.0.0",
  "description": "shopfloor-backend",
  "main": "app.js",
  "scripts": {
    "start": "nodemon app.js --exec babel-node --presets babel-preset-env",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "shopfloor"
  ],
  "author": "Davide Del Popolo",
  "license": "MIT",
  "dependencies": {
    "express": "^4.17.1",
    "js-yaml": "^4.1.0",
    "mongoose": "^6.0.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.2.2",
    "babel-preset-env": "^1.7.0",
    "eslint": "^7.32.0",
    "nodemon": "^2.0.12"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "browser": true
    },
    "rules": {
      "brace-style": [
        "error",
        "stroustrup"
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "no-unused-vars": [
        "warn"
      ],
      "no-var": [
        "off"
      ],
      "one-var": [
        "off"
      ]
    }
  }
